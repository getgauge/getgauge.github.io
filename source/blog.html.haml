.inner-banner
  .container
    %h1.caption Blog

.page-content
  .container
    - page_articles = filter_drafts(page_articles)
    - if (page_articles.length > 0)
      = partial('blog-listing.haml', :locals =>{ prev_page: prev_page, next_page: next_page, page_number: page_number, num_pages: num_pages, page_articles: page_articles })
    - else
      %h3 We're almost there! Our blog will be published soon. Watch this space.
