.container
  - if !prev_page
    .blog-list-item.latest-blog
      - article = page_articles.first
      .post-summary
        %a.post-link{:href => "#{article.url}"}
          %figure.post-summary-image
            %img{:src => image_path(article.data.summary_image), :alt => article.title}
        .blog-details
          %span.author
            = article.data['author']
          %span.post-date
            = article.date.strftime('%-d %B %Y')
          %h2.post-title
            = link_to article.title, article
          %p.excerpt
            = article.data['summary']
          = link_to 'Read more...', article , class: 'readmore'
        .tags
          - article.tags.sort.each do |tag|
            = link_to tag, tag_path(tag)
  .row
    - [0,1,2].each do |i|
      .col-sm-6.col-md-4
        - page_articles = !prev_page ? page_articles.drop(1) : page_articles
        - group_articles(page_articles)[i].each do |article|
          .blog-list-item
            .post-summary
              %a.post-link{:href => "#{article.url}"}
                %figure.post-summary-image
                  %img{:src => image_path(article.data.summary_image), :alt => article.title}
              .blog-details
                %span.author
                  = article.data['author']
                %span.post-date
                  = article.date.strftime('%-d %B %Y')
                %h2.post-title
                  = link_to article.title, article
                %p.excerpt
                  = article.data['summary']
                = link_to 'Read more...', article , class: 'readmore'
              .tags
                - article.tags.sort.each do |tag|
                  = link_to tag, tag_path(tag)
                / %span.comments-info
                /   %i.fa.fa-comment
                /   3 comments

  .pagination-section
    - if prev_page
      %span.pagination
        %a{:href => "#{prev_page.url}"} <i class="fa fa-arrow-left"></i> Newer
    - else
      %span.disabled
        <i class="fa fa-arrow-left"></i>
        Newer

    - if next_page
      %span.pagination
        %a{:href => "#{next_page.url}"} Older <i class="fa fa-arrow-right"></i>
    - else
      %span.disabled
        Older
        <i class="fa fa-arrow-right"></i>
