    %header.top
      .container
        - if is_home_page
          %a.logo{:href => "index.html"} 
            %img#thumb{:width => "150", :height=>"38", :alt => "Gauge logo", :src => asset_path(:images, 'Gauge_logo.svg')}
        - elsif is_blog_article
          %a.logo{:href => "../../../../../index.html"} 
            %img#thumb{:width => "150", :height=>"38", :alt => "Gauge logo", :src => asset_path(:images, 'Gauge_logo.svg')}
        - else
          %a.logo{:href => "../index.html"} 
            %img#thumb{:width => "150", :height=>"38",  :alt => "Gauge logo", :src => asset_path(:images, 'Gauge_logo.svg')}
        %span.beta
          Beta
        %nav.mainnav
          %ul.level0
            %li.dropdown
              = nav_bar_link 'Get Started', 'get-started/index.html', :class => "link-get-started"
              %ul.level1
                %li
                  = nav_bar_link 'Download', 'get-started/index.html', :class => "link-download"
                %li
                  = nav_bar_link 'Plugins', 'plugins/index.html', :class => "link-plugins"
            %li.dropdown
              = nav_bar_link 'Contribute', 'contribute/index.html', :class => "toplink-contribute"
              %ul.level1
                %li
                  = nav_bar_link 'Contribute', 'contribute/index.html', :class => "link-contribute"
                %li
                  = nav_bar_link 'CLA', 'cla/index.html', :class => "link-cla"
              %li
                %a{:href => "http://getgauge.io/documentation/user/current/", :target => "_blank", :class => "link-documentation"} Documentation
            %li
              = nav_bar_link 'Blog', 'blog/index.html', :class => "link-blog"

        %button.navbtn.menu.collapse
          %span
        %a{:alt =>"Gauge on Github", :href => "https://github.com/getgauge/gauge", :target => "_blank",  :class => "github-fork-ribbon", title: "Fork me on GitHub"}

    #content
      = yield
    %footer
      .join-community
        .container
          %h3 Join our community
          %ul
            %li
              %a.join-group{:href => "https://groups.google.com/forum/#!forum/getgauge", :target => "_blank"} 
                %i.icon.join-us
                Join Us
            %li
              %a.contribute{:href => "https://gitter.im/getgauge/chat", :target => "_blank"} 
                %i.icon.develop-with-us
                Talk to Us
            %li
              %a.contact{:href => "https://github.com/getgauge", :target => "_blank"} 
                %i.icon.watch-us
                Watch Us
            %li
              %a.followus{:href => "https://twitter.com/getgauge", :target => "_blank"} 
                %i.icon.follow-us
                Follow Us

      .powered-by
        .container
          %a{:href => "http://www.thoughtworks.com/products"}
            %img{:alt => "Thoughtworks logo", :height=>"44", :src => asset_path(:images, 'thoughtworks_logo.svg')}
          .disclamer Gauge is an open source project, sponsored by ThoughtWorks Inc. under the GPL License, Version 3.0

      - if current_resource.data.credit
        .credits
          / %img{:alt => "cc-by", :src => asset_path(:images, 'cc-by.png')}
          %a{:href => "#{current_resource.data.credit_link}", :targer => "_blank"}
            =current_resource.data.credit



        = javascript_include_tag  "mobileNav"
        = javascript_include_tag  "browser_support"
