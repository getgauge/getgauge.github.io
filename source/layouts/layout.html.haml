      ga('create', 'UA-54838477-1', 'auto');
      ga('send', 'pageview');

    <!-- Google Analytics end -->
    %header.dark
      %nav.nav-wrapper
        - if is_home_page
          %a.logo{:href => "index.html"} 
            %img#thumb{:width => "150", :height=>"38", :alt => "Gauge logo", :src => asset_path(:images, 'Gauge_logo.svg')}
        - elsif is_blog_article
          %a.logo{:href => "../../../../../index.html"} 
            %img#thumb{:width => "150", :height=>"38", :alt => "Gauge logo", :src => asset_path(:images, 'Gauge_logo.svg')}
        - else
          %a.logo{:href => "../index.html"} 
            %img#thumb{:width => "150", :height=>"38",  :alt => "Gauge logo", :src => asset_path(:images, 'Gauge_logo.svg')}
        .beta
          %img{:alt => "BETA", :src => asset_path(:images, 'svg/icon_beta.svg')}
        %a.navigation-menu-button{:href => "javascript:void(0)"}
          %i.fa.fa-bars.fa-2x
        %ul.header-nav
          %li.nav-link.nav-drilldown
            = nav_bar_link 'Get Started <span class="expand"><i class="fa fa-plus"></i></span>', 'get-started/index.html'
            %ul.nav-drilldown-list
              %li
                = nav_bar_link 'Download', 'get-started/index.html'
              %li
                = nav_bar_link 'Plugins', 'plugins/index.html'
          %li.nav-link.nav-drilldown
            = nav_bar_link 'Contribute <span class="expand"><i class="fa fa-plus"></i></span>', 'contribute/index.html'
            %ul.nav-drilldown-list
              %li
                = nav_bar_link 'Contribute', 'contribute/index.html'
              %li
                = nav_bar_link 'CLA', 'cla/index.html'
          -#%li.nav-link
          -#  = nav_bar_link 'Blog', 'blog/index.html'
          %li.nav-link
            %a{:href => "http://getgauge.io/documentation/user/current/", :target => "_blank"} Documentation

          %li.nav-link-short
            %a{:alt =>"Gauge on Github", :href => "https://github.com/getgauge/gauge", :target => "_blank"}
              %i.fa.fa-github
    #content
      = yield
    %footer
      %section.community
        %h2 Join our community
        .community-list
          %a.join-group{:href => "https://groups.google.com/forum/#!forum/getgauge", :target => "_blank"} Join Us
          %a.contribute{:href => "https://gitter.im/getgauge/chat", :target => "_blank"} Talk to Us
          %a.contact{:href => "https://github.com/getgauge", :target => "_blank"} Watch Us
          %a.followus{:href => "https://twitter.com/getgauge", :target => "_blank"} Follow Us

      - if current_resource.data.credit
        %section.credit.clearfix
          .credit-container.clearfix
            %img{:alt => "cc-by", :src => asset_path(:images, 'cc-by.png')}
            %span.thanks
              %a{:href => "#{current_resource.data.credit_link}", :targer => "_blank"}
                =current_resource.data.credit

      %section.powered-by
        %a{:href => "http://www.thoughtworks.com/products"}
          %img{:alt => "Thoughtworks logo", :height=>"44", :src => asset_path(:images, 'thoughtworks_logo.svg')}
        .disclamer Gauge is an open source project, sponsored by ThoughtWorks Inc. under the GPL License, Version 3.0


        = javascript_include_tag  "mobileNav"
        = javascript_include_tag  "browser_support"
