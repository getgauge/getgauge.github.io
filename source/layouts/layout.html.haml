---
title: Gauge | ThoughtWorks
---
<!doctype html>
%html
  %head
    .show
      %script{:type=>"text/javascript"}
        var images = new Array()
        function preload() {
        for (i = 0; i < preload.arguments.length; i++) {
        images[i] = new Image()
        images[i].src = preload.arguments[i]
        }
        }

    %meta{:charset => "utf-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %title= current_resource.data.title || "Gauge | ThoughtWorks"
        %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
          %link
            = favicon_tag 'favicons/favicon.ico',:type => 'image/ico' ,:rel => 'shortcut icon'
            = favicon_tag 'favicons/apple-touch-icon.png',:type => 'image/ico' ,:rel => 'apple-touch-icon-precomposed'
            = stylesheet_link_tag "application"
            = javascript_include_tag  "frameworks/jquery-1.11.2"
            = javascript_include_tag  "application", :async => true
            %link{:href => "http://netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css", :rel => "stylesheet"}
            %link{:href => "http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.9.1/styles/default.min.css", :rel => "stylesheet"}
            %script{:src => "http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.9.1/highlight.min.js"}
            :javascript
              hljs.initHighlightingOnLoad();

  %body{:class => page_classes}
    <!-- Google Tag Manager -->
    %noscript
