= wrap_layout :layout do

  - if current_page.data.draft?
    %div.draft-post Draft

  .container
    .blog-post
      %figure.post-summary-image
        %img{:src => current_page.data.summary_image, :alt => current_page.title}

      %header.metadata.blog-post-header
        %h1
          = current_page.data.title
        Posted By
        %span.author= current_page.data['author']
        %span.post-date
          = current_page.data['date']
        .tags
          - current_page.tags.sort.each do |tag|
            = link_to tag, tag_path(tag)
    .blog-content
      = yield
