= wrap_layout :layout do

  - if current_page.data.draft?
    %div.draft-post Draft

  .container
    .blog-post
      %figure.post-summary-image
        %img{:src => image_path(current_page.data.summary_image), :alt => current_page.title}

      %header.metadata.blog-post-header
        %h1
          = current_page.data.title
        Posted By
        %span.author= current_page.data['author']
        %span.post-date
          = current_page.data['date']
        .tags
          - current_page.tags.sort.each do |tag|
            = link_to tag, tag_path(tag)
    .blog-content
      = yield

    <div id="disqus_thread"></div>
<script>
var disqus_config = function () {
this.page.url = current_page;
this.page.identifier = current_page.title;
};
(function() { // DON'T EDIT BELOW THIS LINE
var d = document, s = d.createElement('script');
s.src = '//getgauge.disqus.com/embed.js';
s.setAttribute('data-timestamp', +new Date());
(d.head || d.body).appendChild(s);
})();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>  
      
